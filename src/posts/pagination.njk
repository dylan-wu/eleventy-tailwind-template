---
layout: base
pagination:
    data: posts
    size: 1
    alias: post
permalink: "posts/{{post.title | slug}}/"
---

<div class="w-full flex justify-center py-12 px-4">
    <div class="sm:4/12 md:w-6/12 lg:w-6/12 2xl:w-5/12">
        <div>
            <div class="flex items-center">
                <p class="text-sm lg:text-base leading-none text-gray-500 dark:text-gray-300">{{post.date}}</p>
            </div>
            <div class="mt-4">
                <div class="text-lg md:text-2xl lg:text-5xl font-black xl:leading-tight text-gray-900 dark:text-gray-50">
                    <h1>{{post.title}}</h1>
                </div>
            </div>
            <div class="w-full justify-between items-center mt-4">
                <div class="flex flex-wrap items-center md:-mx-2">
                    {% for tag in post.tags %}
                        <a href="/tags/{{tag}}">
                            <div class="flex flex-wrap items-center justify-center p-2 sm:m-2 my-2 bg-gray-200 dark:bg-gray-800 rounded">
                                <p class="text-sm lg:text-base leading-none text-gray-500 dark:text-gray-300">{{tag}}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
                <div class="mt-4">
                    <a href="/authors/{{post.author | slug}}/"><p class="text-sm lg:text-base leading-none text-gray-500 dark:text-gray-300">Posted By {{post.author}}</p>
                </div>
            </div>
        </div>
        <div class="my-6 lg:my-12"><img class="w-full" src="{{post.thumbnail}}"/></div>
        <div class="my-6 lg:my-12">
            <p class="leading-7 text-gray-800 dark:text-gray-400 md:text-xl">{{post.body}}</p>
        </div>
    </div>
</div>